---
import Header from "@components/Header.astro";
import "@fontsource-variable/el-messiri";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Machlist" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Machlist - {title}</title>
	</head>
	<body class="text-skin-base">
		<Header />
		<main>
			<slot />
		</main>
	</body>
</html>
<script src="../js/aos"></script>

<style is:global>
	:root {
		--color-neutral: 0, 0%, 13%; /* hsl(0, 0%, 13%) */
		--color-primary: 213, 34%, 15%; /* hsl(213, 34%, 15%) */
		--color-secondary: 0, 0%, 30%; /* hsl(0, 0%, 30%) */
		--color-accent: 51, 100%, 50%; /* hsl(51, 80%, 50%) */
		--color-accent-1: 12, 100%, 50%; /* hsl(12, 100%, 50%) */
		--color-accent-2: 49, 90%, 40%; /* hsl(49, 90%, 40%) */
		--color-accent-3: 145, 63%, 49%; /* hsl(145, 63%, 49%) */
		--color-background: 0, 0%, 95%; /* hsl(0, 0%, 95%) */
		--color-purple: 277, 70%, 35%; /* hsl(277, 70%, 35%) */
		--color-teal: 180, 100%, 25%; /* hsl(180, 100%, 25%) */
		--color-magenta: 326, 100%, 50%; /* hsl(326, 100%, 50%) */
		--color-text-base: var(--color-primary);
		--color-text-muted: var(--color-secondary);
	}

	/* CSS RESETS */
	html,
	body,
	* {
		margin: 0;
		padding: 0;
	}

	body {
		line-height: 1.4;
		font-size: 1.6em;
		min-height: 100dvh;
		background-color: hsl(var(--color-background));
	}

	html {
		font-family: "El Messiri Variable", Helvetica, sans-serif;
		font-size: 62.5%;
		scroll-behavior: smooth;
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		text-rendering: optimizeLegibility;
	}

	button,
	input[type="submit"],
	input[type="button"] {
		cursor: pointer;
		background-color: transparent;
		border: none;
		font-family: inherit;
		color: inherit;
	}

	*,
	*::after,
	*::before {
		min-width: 0px;
		box-sizing: border-box;
	}

	a {
		color: inherit;
		text-decoration: none;
	}

	ul,
	ol {
		list-style: none;
	}
	/* CSS RESETS */

	hr {
		border: none;
		height: 2px;
		background-color: hsla(var(--color-primary), 0.5);
		border-radius: 5px;
	}
</style>
