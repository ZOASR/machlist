---
import Arrow from "@components/Arrow.astro";
import StagerredBoxes from "@components/svelte/StagerredBoxes.svelte";
import SectionLayout from "@layouts/SectionLayout.astro";
import { getLocaleByPath } from "astro:i18n";
const locale = Astro.currentLocale || getLocaleByPath(Astro.url.pathname);
---

<SectionLayout>
	{
		locale === "en" ? (
			<>
				<h1 class="text-[clamp(5rem,10dvw,8rem)] text-center md:text-start">
					Where to start?
				</h1>
				<StagerredBoxes client:only dir="left" />
				<div class="w-full flex md:flex-row flex-col justify-center items-center gap-[5rem] h-full text-center">
					<div class="flex flex-col items-center gap-8 flex-1 h-full justify-center">
						<p class="text-[3rem]">1. Browse our products</p>
						<p class="text-skin-muted text-[2rem]">
							Browse over 50 machine designs and production lines
							and select the perfect one for your needs
						</p>
						<a
							href="/en/products"
							class="font-bold w-max animated-gradient group rounded-lg text-center px-8 py-4 text-skin-muted transition-all duration-150
					hover:px-12 hover:shadow-lg hover:underline hover:text-skin-base
					focus:px-12 focus:shadow-lg focus:underline focus:text-skin-base"
						>
							See our products{" "}
							<span
								class="inline-block invisible opacity-0 transition-all duration-150 scale-0
						group-hover:scale-100 group-hover:opacity-100 group-hover:visible
						group-focus:scale-100 group-focus:opacity-100 group-focus:visible"
							>
								&rarr;
							</span>
						</a>
					</div>
					<Arrow dir={locale === "en" ? "ltr" : "rtl"} />

					<div class="flex flex-col gap-8 flex-1 items-center justify-center h-full">
						<p class="text-[3rem]">2. Get in touch</p>
						<p class="text-skin-muted text-[2rem]">
							Contact our sales team
						</p>
						<a
							href="/en/contact"
							class="hover:underline w-max bg-skin-primary px-8 py-4 rounded-lg text-center hover:bg-skin-primary/80 transition-all duration-150"
						>
							Contact us
						</a>
					</div>
					<Arrow dir={locale === "en" ? "ltr" : "rtl"} />
					<div class="flex-1 flex flex-col gap-8 h-full justify-center">
						<p class="text-[3rem]">3. Get started</p>
						<p class="text-skin-muted text-[2rem]">
							Start integrating your perfect production line with
							us
						</p>
					</div>
				</div>
			</>
		) : (
			<>
				<h1 class="text-[clamp(5rem,10dvw,8rem)] text-center md:text-start">
					من أين أبدأ؟
				</h1>
				<StagerredBoxes client:only dir="right" />
				<div class="w-full flex md:flex-row flex-col justify-center items-center gap-[5rem] h-full text-center">
					<div class="flex flex-col items-center gap-8 flex-1 h-full justify-center">
						<p class="text-[3rem]">1. تصفح منتجاتنا</p>
						<p class="text-skin-muted text-[2rem]">
							تصفح من بين أكثر من 50 تصميم و خط إنتاج و اختر
							المنتج المناسب لك
						</p>
						<a
							href="/ar/products"
							class="font-bold w-max animated-gradient group rounded-lg text-center px-8 py-4 text-skin-muted transition-all duration-150
					hover:px-12 hover:shadow-lg hover:underline hover:text-skin-base
					focus:px-12 focus:shadow-lg focus:underline focus:text-skin-base"
						>
							تصفح منتجاتنا{" "}
							<span
								class="inline-block invisible opacity-0 transition-all duration-150 scale-0
						group-hover:scale-100 group-hover:opacity-100 group-hover:visible
						group-focus:scale-100 group-focus:opacity-100 group-focus:visible"
							>
								&larr;
							</span>
						</a>
					</div>
					<Arrow dir={locale === "en" ? "ltr" : "rtl"} />

					<div class="flex flex-col gap-8 flex-1 items-center justify-center h-full">
						<p class="text-[3rem]">2. تواصل معنا</p>
						<p class="text-skin-muted text-[2rem]">
							تواصل مع فريق المبيعات لدينا
						</p>
						<a
							href="/ar/contact"
							class="hover:underline w-max bg-skin-primary px-8 py-4 rounded-lg text-center hover:bg-skin-primary/80 transition-all duration-150"
						>
							تواصل معنا
						</a>
					</div>
					<Arrow dir={locale === "en" ? "ltr" : "rtl"} />
					<div class="flex-1 flex flex-col gap-8 h-full justify-center">
						<p class="text-[3rem]">3. ابدأ</p>
						<p class="text-skin-muted text-[2rem]">
							ابدأ بتشغيل خط الانتاج الخاص بك
						</p>
					</div>
				</div>
			</>
		)
	}
</SectionLayout>

<style>
	@keyframes gradientAnimation {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	.animated-gradient {
		background-image: linear-gradient(
			to right,
			hsla(var(--color-accent), 0.7),
			hsla(var(--color-accent-1), 0.7)
		);
		background-size: 200% auto;
		animation: gradientAnimation 4s infinite;
		&:hover {
			background-image: linear-gradient(
				to right,
				hsla(var(--color-accent), 1),
				hsla(var(--color-accent-1), 1)
			);
		}
	}
</style>
