---
const { dir } = Astro.props;
---

<svg
	version="1.1"
	id="Layer_1"
	xmlns="http://www.w3.org/2000/svg"
	xmlns:xlink="http://www.w3.org/1999/xlink"
	viewBox="0 0 330 330"
	xml:space="preserve"
	width="10rem"
	class="animate-pulse"
	style=`--transform-dir: ${dir === 'rtl' ? '1' : '-1'}; --rotation: ${dir === 'rtl' ? '180deg' : '0deg'}`
>
	<linearGradient id="heading-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
		<stop offset="0%" stop-color="hsla(var(--color-accent), 1)"></stop>
		<stop offset="100%" stop-color="hsla(var(--color-accent-1), 1)"></stop>
	</linearGradient>
	<path
		fill="url(#heading-gradient)"
		id="XMLID_27_"
		d="M15,180h263.787l-49.394,49.394c-5.858,5.857-5.858,15.355,0,21.213C232.322,253.535,236.161,255,240,255
	s7.678-1.465,10.606-4.394l75-75c5.858-5.857,5.858-15.355,0-21.213l-75-75c-5.857-5.857-15.355-5.857-21.213,0
	c-5.858,5.857-5.858,15.355,0,21.213L278.787,150H15c-8.284,0-15,6.716-15,15S6.716,180,15,180z"
	></path>
</svg>

<style>
	#heading-background path {
		stroke-width: 5px;
		animation: grow 2s ease-in-out forwards;
		stroke-linecap: round;
		stroke: url(#heading-gradient);
	}

	svg {
		transform: rotate(90deg);
		animation: bounce 1s ease-in-out infinite;
	}

	@keyframes bounce {
		0%,
		100% {
			transform: translateX(calc(25% * var(--transform-dir)))
				rotate(var(--rotation));
			animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
		}
		50% {
			transform: rotate(var(--rotation));
			animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
		}
	}

	@media (width <= 768px) {
		@keyframes bounce {
			0%,
			100% {
				transform: translateY(-25%) rotate(90deg);
				animation-timing-function: cubic-bezier(0.8, 0, 1, 1);
			}
			50% {
				transform: rotate(90deg);
				animation-timing-function: cubic-bezier(0, 0, 0.2, 1);
			}
		}
	}
</style>
